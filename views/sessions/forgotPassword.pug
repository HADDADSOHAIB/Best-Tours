extends ../layouts/base.pug

block append header
  link(rel='stylesheet' href='/css/signin.css')

block mainpage
  .signin
    .container
      .card
        .card-header.text-center.font-weight-bolder Reset Password

        .card-body
          form
            .form-group
              label(for="email") Email
              input.form-control#email(type="email" required)
            
            .d-flex.justify-content-around
              button.btn.btn-primary(type="submit") Reset Password

append scripts
  script(src='js/forgotPassword.js')
       
  