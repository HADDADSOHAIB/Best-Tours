extends ../layouts/base.pug

block append header
  link(rel='stylesheet' href='/css/reset-password.css')

block mainpage
  .reset-password
    .container
      .card
        .card-header.text-center.font-weight-bolder Reset Password

        .card-body
          form(data-token= token)
            .form-group
              label(for="password") Password
              input.form-control#password(type="password" required minlength="8")
            .form-group
              label(for="password-confirmation") Confirm password
              input.form-control#password-confirmation(type="password" required)
            .d-flex.justify-content-around
              button.btn.btn-primary(type="submit") Reset Password

append scripts
  script(src='/js/signup.js')
  script(src='/js/resetPassword.js')
       
  